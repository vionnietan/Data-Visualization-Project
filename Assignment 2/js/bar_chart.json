{
  "$schema": "https://vega.github.io/schema/vega-lite/v4.json",
  "title":"Top 10 Countries with highest Suicide Count",
  "background":"#FEF8EC",
  "width":"container",
  "height":"container",
  "data": {
    "url": "https://raw.githubusercontent.com/vionnietan/FIT3179/master/Assignment%202/data/count_clean.csv"
  },
  "transform": [
    {
      "window": [{"op": "row_number", "as": "rank"}],
      "sort": [{"field": "suicides_no", "order": "descending"}]
    },
    {"filter": "datum.rank <= 10"}
  ],
  "selection": {
    "highlight": {"type": "single", "empty": "none", "on": "mouseover"},
    "select": {"type": "multi"}
  },
  "mark": {
    "type": "bar",
    "fill": "#4C78A8",
    "stroke": "black",
    "cursor": "pointer"
  },
  "encoding": {
    "x": {"field": "country", "type": "nominal"},
    "y": {"field": "suicides_no", "type": "quantitative","title":"Suicide Count"},
    "fillOpacity": {
      "condition": {"selection": "select", "value": 1},
      "value": 0.3
    },
    "strokeWidth": {
      "condition": [
        {
          "test": {
            "and": [{"selection": "select"}, "length(data(\"select_store\"))"]
          },
          "value": 2
        },
        {"selection": "highlight", "value": 1}
      ],
      "value": 0
    }
  },
  "config": {"scale": {"bandPaddingInner": 0.2}}
}
