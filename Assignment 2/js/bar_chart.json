{
  "$schema": "https://vega.github.io/schema/vega-lite/v4.json",
  "background":"#FEF8EC",
  "data": {
    "url": "https://raw.githubusercontent.com/vionnietan/FIT3179/master/Assignment%202/data/suicide_count.csv"
  },
  "transform": [
    {
      "window": [{
        "op": "rank",
        "as": "rank"
      }],
      "sort": [{ "field": "Count", "order": "descending" }]
    }, {
      "filter": "datum.rank <= 10"
    }
  ],
  "selection": {
    "highlight": {"type": "single", "empty": "none", "on": "mouseover"},
    "select": {"type": "multi"}
  },
  "mark": {
    "type": "bar",
    "fill": "#C093BB",
    "stroke": "black",
    "cursor": "pointer"
  },
  "encoding": {
    "x": {"field": "Country", "type": "nominal"},
    "y": {"field": "Count", "type": "quantitative"},
    "fillOpacity": {
      "condition": {"selection": "select", "value": 1},
      "value": 0.3
    },
    "strokeWidth": {
      "condition": [
        {
          "test": {
            "and": [
              {"selection": "select"},
              "length(data(\"select_store\"))"
            ]
          },
          "value": 2
        },
        {"selection": "highlight", "value": 1}
      ],
      "value": 0
    }
  },
  "config": {
    "scale": {
      "bandPaddingInner": 0.2
    }
  }
}
