{
  "$schema": "https://vega.github.io/schema/vega-lite/v4.json",
  "background":"#FEF8EC",
  "width":"container",
  "height":350,
  "data": {
    "url": "https://raw.githubusercontent.com/vionnietan/FIT3179/master/Assignment%202/data/line_overall_age.csv"
  },
  "params": [
    {
      "name": "Age_selection",
      "bind": {
        "input": "select",
        "options": [
          null,
          "Overall",
          "05-14",
          "15-24",
          "25-34",
          "35-54",
          "55-74",
          "75+"
        ],
        "labels": [
          "Show All",
          "Overall",
          "05-14 years",
          "15-24 years",
          "25-34 years",
          "35-54 years",
          "55-74 years",
          "75+ years"
        ],
        "name": "Age Group Selection: "
      }
    }
  ],
  "transform": [
    {"filter": "Age_selection == null || datum.age == Age_selection"}
  ],
  "encoding": {
    "x": {"field": "year", "type": "temporal","title":null},
    "y": {
      "field": "rate_per_100k",
      "type": "quantitative",
      "title": "Avg. Suicide Rate / 100K population",
      "axis": {"titleFontSize": 10}
    },
    "color": {
      "condition": {"selection": "hover", "field": "age", "type": "nominal","title":null},
      "value": "grey"
    },
    "opacity": {"condition": {"selection": "hover", "value": 1}, "value": 0.075},
    "tooltip": [
      {"field": "age", "type": "nominal","title":"Age Group"},
      {"field": "year", "type": "temporal","title":"Year","axis":{"format":"%Y"}},
      {
        "field": "rate_per_100k",
        "type": "quantitative",
        "title": "Average Suicide Rate",
        "format":".2f"
      }
    ]
  },
  "layer": [
    {
      "selection": {
        "hover": {
          "type": "single",
          "on": "mouseover",
          "empty": "all",
          "fields": ["age"],
          "init": {"age": "Overall"}
        }
      },
      "mark": {"type": "line", "strokeWidth": 8, "stroke": "transparent"}
    },
    {"mark": {"type": "line"}},
    {
      "mark": {
        "type": "text",
        "align": "right",
        "baseline": "middle",
        "dx": -12,
        "fontSize": 11.5,
        "fontStyle": "italic"
      },
      "encoding": {
        "text": {"field": "rate_per_100k", "type": "quantitative","format":".2f"},
        "color": {"value": "black"},
        "opacity": {
          "condition": {
            "test": "datum['age'] == '75+'&& datum['rate_per_100k'] > 30",
            "value": 1
          },
          "value": 0
        },
        "tooltip": [
         {"field": "age", "type": "nominal","title":"Age Group"},
         {"field": "year", "type": "temporal","title":"Year","axis":{"format":"%Y"}},
         {
          "field": "rate_per_100k",
          "type": "quantitative",
          "title": "Average Suicide Rate",
          "format":".2f"
         }
        ]
      }
    },
    {
      "mark": {
        "type": "circle",
        "align": "right",
        "baseline": "middle",
        "dx": -12,
        "fontSize": 10,
        "fontStyle": "italic"
      },
      "encoding": {
        "text": {"field": "rate_per_100k", "type": "quantitative","format":".2f"},
        "color": {"value": "black"},
        "opacity": {
          "condition": {
            "test": "datum['age'] == '75+'&& datum['rate_per_100k'] > 30",
            "value": 1
          },
          "value": 0
        },
        "tooltip": [
         {"field": "age", "type": "nominal","title":"Age Group"},
         {"field": "year", "type": "temporal","title":"Year","axis":{"format":"%Y"}},
         {
          "field": "rate_per_100k",
          "type": "quantitative",
          "title": "Average Suicide Rate",
          "format":".2f"
         }
        ]
      }
    },
        {
      "mark": {
        "type": "text",
        "align": "right",
        "baseline": "middle",
        "dx": -15,
        "fontSize": 11.5,
        "fontStyle": "italic"
      },
      "encoding": {
        "text": {"field": "rate_per_100k", "type": "quantitative","format":".2f"},
        "color": {"value": "black"},
        "opacity": {
          "condition": {
            "test": "datum['age'] == 'Overall' && datum['rate_per_100k'] > 15.4",
            "value": 1
          },
          "value": 0
        },
        "tooltip": [
         {"field": "age", "type": "nominal","title":"Age Group"},
         {"field": "year", "type": "temporal","title":"Year","axis":{"format":"%Y"}},
         {
          "field": "rate_per_100k",
          "type": "quantitative",
          "title": "Average Suicide Rate",
          "format":".2f"
         }
        ]
      }
    },
    {
      "mark": {
        "type": "circle",
        "align": "right",
        "baseline": "middle",
        "dx": -12,
        "fontSize": 10,
        "fontStyle": "italic"
      },
      "encoding": {
        "text": {"field": "rate_per_100k", "type": "quantitative","format":".2f"},
        "color": {"value": "black"},
        "opacity": {
          "condition": {
            "test": "datum['age'] == 'Overall'&& datum['rate_per_100k'] >15.4",
            "value": 1
          },
          "value": 0
        },
        "tooltip": [
         {"field": "age", "type": "nominal","title":"Age Group"},
         {"field": "year", "type": "temporal","title":"Year","axis":{"format":"%Y"}},
         {
          "field": "rate_per_100k",
          "type": "quantitative",
          "title": "Average Suicide Rate",
          "format":".2f"
         }
        ]
      }
    }
  ],
  "config": {}
}
