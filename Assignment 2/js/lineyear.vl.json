{
  "$schema": "https://vega.github.io/schema/vega-lite/v4.json",
  "width": "500",
  "height":"600",
  "title": "No. of Suicides based on Gender from 1979 - 2016",
  "data": {
    "url": "https://raw.githubusercontent.com/vionnietan/FIT3179/master/Assignment%202/data/year_clean.csv"
  },
  "params": [
    {
      "name": "gender_selection",
      "bind": {
        "input": "select",
        "options": [null, "female", "male"],
        "labels": ["Show All", "Female", "Male"],
        "name": "Gender Selection: "
      }
    }
  ],
  "transform": [
    {"filter": "gender_selection == null || datum.sex == gender_selection"}
  ],
  "encoding": {
    "x": {"field": "year", "type": "temporal", "title": "Year"},
    "y": {
      "field": "suicides_no",
      "type": "quantitative",
      "axis": {"tickCount": 7},
      "scale": {"type": "linear", "domain": [0, 210000]}
    }
  },
  "layer": [
    {
      "selection": {
        "continent_highlight": {
          "type": "multi",
          "fields": ["sex"],
          "bind": "legend"
        }
      },
      "mark": "line",
      "encoding": {
        "x": {"field": "year", "type": "temporal"},
        "y": {"field": "suicides_no", "type": "quantitative"},
        "color": {"field": "sex", "type": "nominal"},
        "opacity": {
          "condition": {"selection": "continent_highlight", "value": 0.6},
          "value": 0.2
        },
        "tooltip": [
          {"field": "year", "type": "temporal"},
          {"field": "suicides_no", "type": "quantitative", "format": ","},
          {"field": "sex", "type": "nominal"}
        ]
      }
    },
    {
      "mark": {
        "type": "text",
        "align": "right",
        "baseline": "middle",
        "dx": -12,
        "fontSize": 11.5,
        "fontStyle": "italic"
      },
      "encoding": {
        "text": {"field": "sex", "type": "nominal"},
        "color": {"value": "black"},
        "opacity": {
          "condition": {
            "test": "datum['sex'] == 'Female' || datum['sex'] == 'Male'",
            "value": 1
          },
          "value": 0
        },
        "tooltip": [
          {"field": "sex", "type": "nominal"},
          {"field": "suicides_no", "type": "quantitative", "format": ","},
          {"field": "year", "type": "temporal"}
        ]
      }
    }
  ],
  "config": {}
}
