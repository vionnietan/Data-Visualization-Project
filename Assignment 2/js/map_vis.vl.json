{
      "$schema": "https://vega.github.io/schema/vega-lite/v4.json",
      "background":"#FEF8EC",
      "width": "container",
      "title": "Suicide Count across the world from 1969 - 2016",
      "projection": {"type": "equirectangular"},
        "layer": [
        {
          "data": {
            "url": "https://raw.githubusercontent.com/vionnietan/FIT3179/master/Assignment%202/js/worldmap.geo.json",
            "format": {"type": "topojson", "feature": "world"}
          },
          "mark": {"type": "geoshape", "fill": "lightgray", "stroke": "white"}
        },
        {
          "data": {
            "url": "https://raw.githubusercontent.com/vionnietan/FIT3179/master/Assignment%202/js/worldmap.geo.json",
            "format": {"type": "topojson", "feature": "world"}
          },
          "transform": [
            {
              "lookup": "properties.name",
              "from": {
                "data": {
                  "url": "https://raw.githubusercontent.com/vionnietan/FIT3179/master/Assignment%202/data/count_clean.csv"
                },
                "key": "country",
                "fields": ["suicides_no"]
              }
            },
              {
              "calculate": "datum.suicides_no",
              "as": "Suicide"
            }
          ],
          "mark": {"type": "geoshape"},
          "encoding": {
            "color":{
              "field": "Suicide",
              "type": "quantitative",
              "scale": {
                "scheme": {"name": "purples"}
              }
            },
            "tooltip": [
            {"field": "properties.name", "type": "nominal", "title": "Country"},
            {"field": "Suicide", "type": "quantitative", "title": "Suicide Count"}
          ]
          }
        }
        ]
}
