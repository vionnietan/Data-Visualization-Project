{
 "$schema": "https://vega.github.io/schema/vega-lite/v4.json",
 "width": "700",
 "height":"800",
 "title": "Suicide Counts around the world 1969 - 2016",
 "projection": {"type": "equirectangular"},
 "data": {
  "url": "https://raw.githubusercontent.com/vionnietan/FIT3179/master/Assignment%202/js/worldmap.geo.json",
  "format": {"type": "topojson", "feature": "world"}
 },
 "transform": 
 [
  {
  "lookup": "properties.name",
  "from": {
    "data": {
      "url": "https://raw.githubusercontent.com/vionnietan/FIT3179/master/Assignment%202/data/count_clean.csv"
    },
    "key": "country",
    "fields": ["suicides_no"]
  }
 },
 {"calculate": "datum.suicides_no", "as": "Confirmed per 10,000 population"}
 ],
 "mark": {"type": "geoshape","stroke":"white"},
 "encoding": {
  "color": {
    "field": "Confirmed per 10,000 population",
    "type": "quantitative",
    "scale": {
      "type": "threshold",
      "domain": [10000,1000000],
      "range": ["#C0C0C0", "#e6550d", "#a63603"]
    }
    },
  "tooltip": [
    {"field": "properties.name", "type": "nominal", "title": "Country"},
    {"field": "suicides_no", "type": "quantitative"}
    ]
  }
}
