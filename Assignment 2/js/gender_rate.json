{
  "$schema": "https://vega.github.io/schema/vega-lite/v4.json",
  "background":"#FEF8EC",
  "width": "container",
  "data": {
    "url": "https://raw.githubusercontent.com/vionnietan/FIT3179/master/Assignment%202/data/gender_grouped.csv"
  },
  "transform": [
    {"calculate": "datum.sex == 'female' ? 'Female' : 'Male'", "as": "Gender"}
  ],
  "width": {"step": 17},
  "mark": "bar",
  "encoding": {
    "column": {"field": "age", "type": "nominal", "spacing": 15,"title":null},
    "y": {
      "aggregate": "sum",
      "field": "rate_per_100k",
      "title": "Average Suicide Rate",
      "axis": {"grid": false}
    },
    "x": {"field": "Gender", "axis": {"title": ""}},
    "color": {"field": "Gender", "scale": {"range": ["#675193", "#ca8861"]},"legend":null},
    "tooltip": [
      {"field": "sex", "type": "ordinal","title":"Gender"},
      {"field": "age", "type": "nominal","title":"Age Group"},
      {
        "field": "rate_per_100k",
        "type": "quantitative",
        "title": "Average Suicide Rate",
        "format":".2f"
      }
    ]
  },
  "config": {"view": {"stroke": "transparent"}, "axis": {"domainWidth": 1}}
}
